# 라이브러리를 만들지 않고 main함수를 넣어 테스트하는 용도로 만들어진 임시 Makefile

NAME = test.out
SRCS = ft_printf.c cs.c di.c
OBJS = $(SRCS:.c=.o)
LIBFT = libft
LIBFTL = libft.a
CC = gcc
# CFLAGS = -Wall
CFLAGS = -Wall -Wextra -Werror

all : $(NAME)

$(NAME) : $(OBJS)
	make all -C $(LIBFT)/
	CC -o $(NAME) $(SRCS) -L $(LIBFT)/ -l ft

#%.o : %.c
#	$(CC) $(CFLAGS) -c $^

clean :
	rm -f $(OBJS)
	make clean -C $(LIBFT)

fclean : clean
	rm -f $(NAME)
	rm -f $(LIBFT)/$(LIBFTL)

re : fclean all
